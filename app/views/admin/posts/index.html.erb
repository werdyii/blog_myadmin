<h2>Administrácia článkov</h2>
<table>
	<thead>
		<tr>
			<th><%= sortable "title", "Názov článku" %></th>
			<th><%= sortable "updated_at", "Posledna úprava" %></th>
			<th>Kategórie článkov</th>
			<th>Akcia</th>
		</tr>
	</thead>
	<tbody>
	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.updated_at.strftime "%d.%m.%Y %H:%M:%S" %></td>
			<td><%= post.category.name %></td>
			<td>
				<%= link_to "Uprav", edit_admin_post_path(post) %>
				<%= link_to "Vymaž", admin_post_path(post), 
							:method => :delete,
							:data => {:confirm => 'Naozaj to chceš smaznuť ???'} %>
			</td>
		</tr>
	<% end %>		
	</tbody>
</table>
<p><%= paginate @posts %></p>
<p><%= link_to "Pridať článok", new_admin_post_path %></p>